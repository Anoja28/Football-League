<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frauas.SecondaryController"
    VBox.vgrow="always" HBox.hgrow="always">
    <children>
        <HBox fillHeight="true" prefHeight="500" VBox.vgrow="always">
            <VBox styleClass="container-menu">
                <Label text="Hello, User!" style="-fx-font-size: 20" />
                <Region prefHeight="40" />
                <VBox fx:id="menuContainer" spacing="20.0">
                    <Text text="Home" />
                    <Text text="Games" />
                    <Text text="Players" />
                    <Text text="Create Player" />
                </VBox>
                <Region VBox.vgrow="always" />
                <Button fx:id="secondaryButton" text="Sign Out" styleClass="btn"
                    onAction="#switchToPrimary" />
            </VBox>
            <ScrollPane fx:id="scrollPane" style="-fx-background-color:transparent">
                <content>
                    <VBox HBox.hgrow="always" styleClass="container-content" spacing="20">
                        <Text text="Upcoming Game" styleClass="section-header" />
                        <HBox alignment="center" styleClass="upcoming-section">
                            <Text text="RB Leipzig" />
                            <Region HBox.hgrow="always" />
                            <Text text="20:30" />
                            <Region HBox.hgrow="always" />
                            <Text text="Bayern MÃ¼nchen" />
                        </HBox>
                        <Text text="Clubs" styleClass="section-header" />
                        <TilePane fx:id="clubsDisplay" hgap="4" vgap="4"
                            styleClass="container-clubs" />
                        <Text text="Player Table" styleClass="section-header" />
                        <VBox fx:id="tableContainer" HBox.hgrow="always" />
                    </VBox>
                </content>
            </ScrollPane>
        </HBox>
    </children>
</VBox>